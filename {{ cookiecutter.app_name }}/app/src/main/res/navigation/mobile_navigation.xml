<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="{{ cookiecutter.package_name }}.ui.splash.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/activity_splash" >
        <action
            android:id="@+id/action_splash_mvp_to_about_fragment"
            app:destination="@id/navigation_pokedex"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_splash_mvp_to_recursive"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_pokedex"
        android:name="{{ cookiecutter.package_name }}.ui.about.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" >
    </fragment>

</navigation>